<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="15dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:outlineSpotShadowColor="#858585"
    tools:targetApi="p"
    app:cardBackgroundColor="#ECF1F5">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="13dp">

        <ImageView
            android:id="@+id/imBusiness"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="17dp"
            android:layout_marginStart="13dp"
            android:src="@drawable/business_im_shop"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/imBusiness"
            app:layout_constraintStart_toEndOf="@id/imBusiness"
            app:layout_constraintTop_toTopOf="@id/imBusiness"
            >

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:maxWidth="240dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Магазин продуктов Махараджа"
                android:textColor="@color/black_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvBusinessType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="Продажа"
                android:textColor="#858585"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/imBusiness"
            app:layout_constraintStart_toStartOf="@id/imBusiness"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tvProfit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/money"
                android:textColor="@color/black_light"
                android:textSize="18sp"
                android:fontFamily="@font/inter_semibold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imBusiness"
                app:layout_constraintStart_toStartOf="@id/imBusiness" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/per_hour"
                android:textColor="#858585"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular"
                app:layout_constraintStart_toEndOf="@id/tvProfit"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imOpen"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/business_ic_next"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
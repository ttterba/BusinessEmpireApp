<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OpenBusinessFinalStageFragment"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageButton
            android:id="@+id/btn_open_business_final_stage_back"
            style="@style/btn_back_arrow" />

        <TextView
            android:id="@+id/open_business_final_stage_title"
            style="@style/PageTitle"
            android:layout_marginTop="20dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="57dp"/>

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:textSize="16sp"
            android:textColor="#e74c3c"
            android:layout_marginTop="20dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="30dp"
            android:text="@string/not_enough_money"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/edTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:textSize="22sp"
            android:textColor="@color/black_light"
            android:maxLength="40"
            android:hint="@string/title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_cost"
            android:fontFamily="@font/inter_regular"
            android:textSize="18sp"
            android:textColor="@color/black_light"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/tvSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:textSize="18sp"
            android:textColor="@color/black_light"
            android:layout_marginStart="0dp"/>

        <Button
            android:id="@+id/btn_submit"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            app:cornerRadius="10dp"
            android:textSize="16sp"
            android:layout_width="272dp"
            android:layout_height="55dp"
            android:text="@string/open_business"
            android:textAllCaps="false"
            android:letterSpacing="0"
            android:fontFamily="@font/inter_semibold"
            android:backgroundTint="@color/blue_main"
            android:layout_gravity="center"
            android:layout_marginTop="47dp"/>
    </LinearLayout>


</FrameLayout>
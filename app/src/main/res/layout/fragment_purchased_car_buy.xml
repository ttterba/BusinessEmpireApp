<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PurchasedCarBuyFragment"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_back_arrow"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/car_image"
            android:layout_marginTop="6dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="@id/decor"
            app:layout_constraintTop_toTopOf="@id/decor"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_gravity="end">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/black_light"
                android:textSize="22sp"
                tools:text="Meren Maybach"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/black_light"
                android:textSize="14sp"
                tools:text="Meren Maybach"/>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/car_image"
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:scaleX="-1"
                android:maxWidth="250dp"
                android:src="@drawable/cars_marcedes_meybach_s_class"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="-300dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/black_light"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="@string/motor"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="11dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_df"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#f3f3f3"
                app:cardCornerRadius="15dp"
                android:layout_marginEnd="13dp">

                <TextView
                    android:id="@+id/tv_df"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@color/black_light"
                    android:textSize="22sp"
                    android:text="@string/df"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="13dp"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_bst"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#f3f3f3"
                app:cardCornerRadius="15dp"
                android:layout_marginEnd="13dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_bst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/black_light"
                        android:textSize="22sp"
                        android:text="@string/bst"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="13dp"/>

                    <TextView
                        android:id="@+id/tv_bst_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/black_light"
                        android:textSize="12sp"
                        tools:text="+ 15 %"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="3dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_s_plus"
                android:layout_width="75dp"
                android:layout_height="75dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#f3f3f3"
                app:cardCornerRadius="15dp"
                android:layout_marginEnd="13dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_s_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/black_light"
                        android:textSize="22sp"
                        android:text="@string/s_plus"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="13dp"/>

                    <TextView
                        android:id="@+id/tv_s_plus_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/black_light"
                        android:textSize="12sp"
                        tools:text="+ 15 %"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="3dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/black_light"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:text="@string/equipment"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="11dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_standart"
                android:layout_width="145dp"
                android:layout_height="75dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#f3f3f3"
                app:cardCornerRadius="15dp"
                android:layout_marginEnd="13dp">

                <TextView
                    android:id="@+id/tv_standart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:textColor="@color/black_light"
                    android:textSize="22sp"
                    android:text="@string/standart"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="13dp"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_premium"
                android:layout_width="145dp"
                android:layout_height="75dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#f3f3f3"
                app:cardCornerRadius="15dp"
                android:layout_marginEnd="13dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_premium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:textColor="@color/black_light"
                        android:textSize="22sp"
                        android:text="@string/premium"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="13dp"/>

                    <TextView
                        android:id="@+id/tv_premium_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/black_light"
                        android:textSize="12sp"
                        tools:text="+ 15 %"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="3dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            style="@style/semi_divider"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/summary"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/black_light"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tvSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$ 144 289 212 555 124 123,32"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/black_light"
                android:textSize="18sp"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_buy"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            app:cardElevation="0dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/black_light">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buy"
                android:textAllCaps="false"
                android:letterSpacing="0.01"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
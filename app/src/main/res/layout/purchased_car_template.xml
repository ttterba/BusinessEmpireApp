<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="13dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/decor"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/blue_nice"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/car_image"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        app:layout_constraintTop_toBottomOf="@id/decor"
        app:layout_constraintBottom_toBottomOf="@id/decor"
        app:layout_constraintEnd_toEndOf="@id/decor"
        android:adjustViewBounds="true"
        android:scaleX="-1"
        android:layout_marginEnd="20dp"
        android:maxWidth="250dp"
        android:src="@drawable/cars_marcedes_meybach_s_class"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/car_image"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="@id/decor"
        app:layout_constraintTop_toTopOf="@id/decor"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/white"
            android:textSize="22sp"
            tools:text="Meren Maybach Meren Maybach Meren Maybach"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:text="Meren Maybach"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>